{
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "TextBlock",
        "size": "Medium",
        "weight": "Bolder",
        "text": "Hello ${from.name}, I'm Package Manager Bot."
      },
      {
        "type": "TextBlock",
        "text": "How can I help?",
        "wrap": true
      },
      {
        "type": "ActionSet",
        "actions": [
          {
            "type": "Action.Execute",
            "title": "Scan package"
          },
          {
            "type": "Action.ShowCard",
            "title": "Enter ID",
            "card": {
              "type": "AdaptiveCard",
              "body": [
                {
                  "type": "Input.Text",
                  "id": "message",
                  "placeholder": "Enter Package ID",
                  "isMultiline": true
                }
              ],
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Send"
                }
              ],
              "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
            }
          },
          {
            "type": "Action.OpenUrl",
            "title": "Web App",
            "url": "${viewUrl}"
          }
        ]
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
  }