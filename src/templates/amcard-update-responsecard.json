{
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "TextBlock",
        "size": "Medium",
        "weight": "Bolder",
        "text": "Response sent re package: ${packageId} to:"
      },
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "items": [
              {
                "type": "Image",
                "style": "Person",
                "url": "${from.profileImage}",
                "size": "Small"
              }
            ],
            "width": "auto"
          },
          {
            "type": "Column",
            "items": [
              {
                "type": "TextBlock",
                "spacing": "None",
                "wrap": true,
                "text": "${from.name}",
                "weight": "Bolder"
              },
              {
                "type": "TextBlock",
                "text": "${$root.from.jobTitle}",
                "wrap": true,
                "spacing": "None",
                "isSubtle": true
              }
            ],
            "width": "stretch"
          }
        ]
      },
      {
        "type": "TextBlock",
        "text": "Message:",
        "wrap": true,
        "spacing": "None",
        "weight": "Bolder"
      },
      {
        "type": "TextBlock",
        "text": "${message}",
        "wrap": true
      }
    ],
    "actions": [
      {
        "type": "Action.ShowCard",
        "title": "Details",
        "card": {
          "type": "AdaptiveCard",
          "body": [
            {
              "type": "FactSet",
              "facts": [
                {
                  "$data": "${properties}",
                  "title": "${key}:",
                  "value": "${value}"
                }
              ]
            }
          ],
          "actions": [
            {
              "type": "Action.OpenUrl",
              "title": "More Info",
              "url": "${viewUrl}"
            }
          ],
          "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
        }
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
  }