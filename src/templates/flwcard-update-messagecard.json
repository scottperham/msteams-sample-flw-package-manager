{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${packageId} - Package Details"
    },
    {
      "type": "TextBlock",
      "text": "Message sent to:",
      "wrap": true,
      "weight": "Bolder"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${accountManager.profileImage}",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "spacing": "None",
              "wrap": true,
              "text": "${accountManager.name}",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "${$root.accountManager.jobTitle}",
              "wrap": true,
              "spacing": "None",
              "isSubtle": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "${$root.message}"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Details",
      "url": "${viewUrl}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}