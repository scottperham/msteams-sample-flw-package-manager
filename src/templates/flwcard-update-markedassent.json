{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${packageId} - Package Details"
    },
    {
      "type": "TextBlock",
      "text": "Package marked as sent.",
      "wrap": true,
      "weight": "Bolder"
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "Details",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "FactSet",
            "facts": [
              {
                "title": "Customer",
                "value": "${customerDisplayName}"
              },
              {
                "title": "Contains",
                "value": "${contains}"
              },
              {
                "title": "Priority",
                "value": "${priority}"
              },
              {
                "title": "Delivery Address",
                "value": "${deliveryAddress}"
              },{
                "title": "Status",
                "value": "${status}"
              },
              {
                "title": "COSHH",
                "value": "${coshh}"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "Action.OpenUrl",
            "title": "More Info â†—",
            "url": "${viewUrl}"
          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}